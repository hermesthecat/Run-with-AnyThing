Windows Registry Editor Version 5.00

[HKEY_CLASSES_ROOT\Directory\shell\Run with Claude]
@="Run with Claude"
"Icon"="powershell.exe"

[HKEY_CLASSES_ROOT\Directory\shell\Run with Claude\command]
@="powershell.exe -NoExit -Command \"Set-Location -LiteralPath '%1'; $wslPath = (wsl wslpath -a '%1'); wsl -e bash -c \\\"cd \\\"$wslPath\\\" && claude\\\"\""